---
import '@fontsource-variable/onest';
import Footer from '../components/Footer.astro';
import NavBar from '../components/NavBar.astro';
import { ViewTransitions } from 'astro:transitions';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
	
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/webp" href="/MonssterLogo.webp" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	
	<body class=" dark:text-white  bg-white dark:bg-slate-950 text-gray-800 relative flex justify-center flex-col items-center">
		<div class="absolute left-0 right-0 top-0 -z-10 h-72 bg-white dark:bg-gradient-to-b dark:from-black from-10% dark:to-slate-950"></div>
			<NavBar />
			<slot />
			<Footer />
		</body>
</html>
<style is:global>
	:root {
		color-scheme: dark light;
	}
	html {
		font-family: 'Onest Variable', sans-serif;
	}
	
</style>

